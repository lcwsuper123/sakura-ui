{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "internal/**/*",
        "internal/**/*.json",
        "scripts/**/*"
    ],
    "exclude": [
        "**/__tests__/**",
        "**/tests/**",
        "**/dist"
    ]
}
